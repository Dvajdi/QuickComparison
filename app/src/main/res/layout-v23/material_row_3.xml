<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/doprow"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:cardElevation="8dp"
        android:layout_gravity="center"
        app:cardCornerRadius="10dp"
        style="@style/CardView.MyCardView"


        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:clickable="true"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="10dp"
            android:id="@+id/rl">

            <android.support.design.widget.TextInputLayout
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:enabled="true"
                android:layout_margin="2dp"
                app:hintTextAppearance="@style/SmallText"
                android:id="@+id/etLay1">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_dop_price"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:inputType="numberDecimal"
                    android:ems="8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/Price"
                    android:textColorLink="@color/background_main_activity"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
               app:hintTextAppearance="@style/SmallText"
                android:id="@+id/etLay2"
                android:layout_toRightOf="@+id/etLay1">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_dop_quantity"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:inputType="numberDecimal"
                    android:ems="8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/quantity"
                    android:allowUndo="false" />

            </android.support.design.widget.TextInputLayout>


            <Button
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:text="@string/default_unit"
                android:id="@+id/button_dop_unit"
                android:background="@color/background_unit"
                android:layout_margin="2dp"
                android:enabled="true"
                android:focusable="false"
                android:layout_alignTop="@+id/tv_dop_result"
                android:layout_alignParentRight="true" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="48dp"
                android:id="@+id/tv_dop_result"
                android:gravity="center"
                android:textSize="16sp"
                android:background="@drawable/rectangle_light"
                android:layout_margin="2dp"
             
                android:layout_alignParentRight="false"
                android:layout_toLeftOf="@+id/button_dop_unit" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:id="@+id/tv_dop_economy"
                android:textSize="10sp"
                android:layout_margin="2dp"
            
                android:layout_below="@+id/etLay1"
                android:gravity="center" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>



