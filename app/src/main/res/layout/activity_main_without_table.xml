<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ru.forge.twice_a_day.quickcomparison.MainActivity"
    tools:showIn="@layout/material_activity_without_table"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <ScrollView
        android:layout_width="match_parent"
                android:layout_height="match_parent"
        android:id="@+id/scrollView">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="70dp">

                <LinearLayout
                    style="@style/CardView.MyCardView"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/row_top"
                    android:layout_gravity="top"
                    android:layout_margin="4dp"
                    android:gravity="center_vertical">

                    <android.support.design.widget.TextInputLayout

                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:id="@+id/view"
                        android:layout_weight="3"
                        app:hintTextAppearance="@style/SmallText"
                        android:background="@drawable/rounded">

                        <ru.forge.twice_a_day.quickcomparison.NumberEditText
                            android:imeOptions="flagNavigateNext"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/et_goal_quantity"
                            android:layout_weight="2"
                            android:inputType="numberDecimal"
                            android:textSize="20sp"
                            android:enabled="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:maxLength="9"
                            android:hint="@string/quan_economy"/>
                    </android.support.design.widget.TextInputLayout>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:text="@string/default_unit"
                        android:id="@+id/btnGoalUnit"
                        android:layout_weight="1"
                        android:background="@drawable/rectangle_light"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                android:id="@+id/rl_main">

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
