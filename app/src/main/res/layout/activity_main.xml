<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ru.forge.twice_a_day.quickcomparison.MainActivity"
    android:background="@color/background_main_activity">

    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">
    <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
    android:id="@+id/rl_main"
    android:background="@color/background_main_activity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/row_top"
        android:layout_gravity="top"
        android:layout_margin="4dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="@string/quan_economy"
            android:id="@+id/tv_more_units"
            android:layout_weight="2"
            android:background="@color/background_name"
            android:textIsSelectable="false"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:id="@+id/et_more_units"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:background="@mipmap/line"
            android:textSize="16sp"
            android:enabled="true"
            android:focusable="true"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/row1"
        android:gravity="center_vertical"
        android:weightSum="100">

        <TextView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="@string/Price"
            android:id="@+id/tv_price"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@color/background_name"
            android:layout_weight="25"
            android:focusable="false" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="@string/quantity"
            android:id="@+id/tv_quantity"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:background="@color/background_name"
            android:layout_weight="20" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="@string/unit"
            android:id="@+id/tv_unit"
            android:textStyle="bold"
            android:textSize="18sp"
            android:background="@color/background_name"
            android:gravity="center"
            android:layout_weight="12" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:id="@+id/tv_resalt"
            android:textStyle="bold"
            android:textSize="18sp"
            android:background="@color/background_name"
            android:gravity="center"
            android:text="@string/resalt"
            android:layout_weight="17" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="@string/economy"
            android:id="@+id/tv_economy"
            android:background="@color/background_name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="26"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/row2"
        android:gravity="center_vertical"
        android:weightSum="100"
        android:background="@color/background_tv">

        <EditText
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:inputType="numberDecimal"
            android:id="@+id/et_price1"
            android:textSize="16sp"
            android:background="@mipmap/line"
            android:layout_weight="25"
            android:focusable="true" android:enabled="true"
            android:selectAllOnFocus="false"
            android:gravity="center" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/et_quantity1"
            android:gravity="center"
            android:textSize="16sp"
            android:background="@mipmap/line"
            android:layout_weight="20"
            android:enabled="true" android:focusable="true"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="@string/Button_unit"
            android:id="@+id/button_unit1"
            android:layout_weight="12"
            android:background="@color/background_unit" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:id="@+id/tv_price_unit1"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_weight="17"
            android:enabled="true" android:focusable="true" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:id="@+id/tv_economy1"
            android:layout_weight="20"
            android:enabled="true" android:focusable="true"
            android:textSize="16sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:id="@+id/button_delete1"
            android:background="@mipmap/delete_1"
            android:layout_weight="5"
            android:gravity="top" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/row3"
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        android:weightSum="100"
        android:background="@color/background_tv">

        <EditText
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/et_price2"
            android:gravity="center"
            android:textSize="16sp"
            android:background="@mipmap/line"
            android:layout_weight="25"
            android:enabled="true" android:focusable="true"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/et_quantity2"
            android:gravity="center"
            android:textSize="16sp"
            android:background="@mipmap/line"
            android:layout_weight="20"
            android:enabled="true" android:focusable="true"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="@string/Button_unit"
            android:id="@+id/button_unit2"
            android:layout_weight="12"
            android:background="@color/background_unit" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:id="@+id/tv_price_unit2"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_weight="17"
            android:enabled="true" android:focusable="true"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:id="@+id/tv_economy2"
            android:layout_weight="20"
            android:enabled="true" android:focusable="true"
            android:textSize="16sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:id="@+id/button_delete2"
            android:layout_weight="5"
            android:background="@mipmap/delete_1"
            android:gravity="top" />
    </LinearLayout>

              </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/row_bottom"
        android:layout_gravity="bottom">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ButtonAdd"
            android:id="@+id/button_add"
            android:layout_weight="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/DuttonClear"
            android:id="@+id/button_clear"
            android:layout_weight="1" />
    </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
