<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
              android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ru.forge.twice_a_day.quickcomparison.MainActivity"
    android:id="@+id/rl_main">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/row1">

        <TextView
            android:layout_width="20dp"
            android:layout_height="60dp"
            android:text="@string/Number"
            android:id="@+id/tv_number"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:text="@string/Price"
            android:id="@+id/tv_price"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="@string/quantity"
            android:id="@+id/tv_quantity"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:layout_width="45dp"
            android:layout_height="60dp"
            android:text="@string/unit"
            android:id="@+id/tv_spinner_u"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:layout_width="55dp"
            android:layout_height="60dp"
            android:text="@string/quantityunit"
            android:id="@+id/tv_price_unit"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:text="@string/percent"
            android:id="@+id/tv_percent"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/row2"
        android:layout_gravity="bottom">

        <TextView
            android:layout_width="20dp"
            android:layout_height="60dp"
            android:text="@string/one"
            android:id="@+id/tv_number1"
            android:textSize="20sp"
            android:gravity="center" />

        <EditText
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/et_price1"
            android:gravity="center"
            android:textSize="20sp" />

        <EditText
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/et_quantity1"
            android:gravity="center"
            android:textSize="20sp" />

        <Spinner
            android:layout_width="45dp"
            android:layout_height="60dp"
            android:id="@+id/spinner_u1"
            android:gravity="center" />

        <TextView
            android:layout_width="55dp"
            android:layout_height="60dp"
            android:id="@+id/tv_price_unit1"
            android:gravity="center"
            android:textSize="20sp" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:id="@+id/tv_percent1"
            android:gravity="center"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>
