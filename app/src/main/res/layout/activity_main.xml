<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
              android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ru.forge.twice_a_day.quickcomparison.MainActivity"
    android:id="@+id/rl_main"
    android:background="#64b5f6">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/row1">

        <TextView
            android:layout_width="96dp"
            android:layout_height="64dp"
            android:text="@string/Price"
            android:id="@+id/tv_price"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center"
            android:background="#bbdefb" />

        <TextView
            android:layout_width="104dp"
            android:layout_height="64dp"
            android:text="@string/quantity"
            android:id="@+id/tv_quantity"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:background="#bbdefb" />

        <TextView
            android:layout_width="48dp"
            android:layout_height="64dp"
            android:text="@string/unit"
            android:id="@+id/tv_unit"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:background="#bbdefb" />

        <TextView
            android:layout_width="88dp"
            android:layout_height="64dp"
            android:text="@string/resalt"
            android:id="@+id/tv_resalt"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:background="#bbdefb" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/row2"
        android:layout_gravity="bottom">

        <EditText
            android:layout_width="96dp"
            android:layout_height="64dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/et_price1"
            android:gravity="center"
            android:textSize="20sp"
            android:background="#ffffff" />

        <EditText
            android:layout_width="104dp"
            android:layout_height="64dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/et_quantity1"
            android:gravity="center"
            android:textSize="20sp"
            android:background="#ffffff" />

        <Button
            android:layout_width="48dp"
            android:layout_height="64dp"
            android:text="@string/Button_unit"
            android:id="@+id/button_unit1" />

        <TextView
            android:layout_width="88dp"
            android:layout_height="64dp"
            android:id="@+id/tv_price_unit1"
            android:gravity="center"
            android:textSize="20sp"
            android:background="#ffffff" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_delete1"
            android:layout_gravity="left" android:background="@mipmap/delete"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/row3"
        android:layout_gravity="bottom">

        <EditText
            android:layout_width="96dp"
            android:layout_height="64dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/et_price2"
            android:gravity="center"
            android:textSize="20sp"
            android:background="#ffffff" />

        <EditText
            android:layout_width="104dp"
            android:layout_height="64dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/et_quantity2"
            android:gravity="center"
            android:textSize="20sp"
            android:background="#ffffff" />

        <Button
            android:layout_width="48dp"
            android:layout_height="64dp"
            android:text="@string/Button_unit"
            android:id="@+id/button_unit2" />

        <TextView
            android:layout_width="88dp"
            android:layout_height="64dp"
            android:id="@+id/tv_price_unit2"
            android:gravity="center"
            android:textSize="20sp"
            android:background="#ffffff" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_delete2"
            android:layout_gravity="left" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/row_bottom"
        android:layout_gravity="bottom">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ButtonAdd"
            android:id="@+id/button_add"
            android:layout_weight="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/DuttonClear"
            android:id="@+id/button_clear"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/row_top"
        android:layout_gravity="top">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/tv_more_units"
            android:layout_weight="2"
            android:background="#bbdefb" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_more_units"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:background="#ffffff" />
    </LinearLayout>

</LinearLayout>
