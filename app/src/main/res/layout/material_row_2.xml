<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/doprow"
        android:layout_height="60dp"
        android:layout_width="match_parent"
        app:cardElevation="8dp"
        android:layout_gravity="center"
        app:cardCornerRadius="10dp"
        style="@style/CardView"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="100"
            android:gravity="center_vertical"
            android:clickable="true"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="24"
                android:enabled="true"
                android:focusable="true"
                android:layout_margin="2dp"
                >
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_dop_price"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:inputType="numberDecimal"
                    android:ems="8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/Price"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="24"
                android:enabled="true"
                android:focusable="true"
                android:layout_margin="2dp"
                >
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_dop_quantity"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:inputType="numberDecimal"
                    android:ems="8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/quantity"/>

            </android.support.design.widget.TextInputLayout>


            <Button
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:text="@string/Button_unit"
                android:id="@+id/button_dop_unit"
                android:layout_weight="12"
                android:background="@color/background_unit"
                android:layout_margin="2dp"
                android:enabled="true"
                android:focusable="true" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:id="@+id/tv_dop_result"
                android:gravity="center"
                android:textSize="16sp"
                android:background="@drawable/rectangle_light"
                android:layout_weight="20"
                android:layout_margin="2dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:id="@+id/tv_dop_economy"
                android:background="@drawable/rectangle_light"
                android:layout_weight="20"
                android:textSize="16sp"
                android:layout_margin="2dp"
                android:textColor="@color/black" />
        </LinearLayout>

    </android.support.v7.widget.CardView>



