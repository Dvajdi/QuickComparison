<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/doprow"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:cardElevation="8dp"
        android:layout_gravity="center"
        app:cardCornerRadius="12dp"
        style="@style/CardView.MyCardView"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/layout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="14">
            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:hintTextAppearance="@style/SmallText"
                android:id="@+id/etLay1"
                android:layout_weight="4"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp">

                <EditText
                    android:imeOptions="flagNavigateNext"
                    android:id="@+id/et_dop_price"
                    android:gravity="center_horizontal"
                    android:textSize="20sp"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/Price"
                    android:maxLength="9"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:hintTextAppearance="@style/SmallText"
                android:id="@+id/etLay2"
                android:layout_weight="4"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp">

                <EditText
                    android:imeOptions="actionDone"
                    android:id="@+id/et_dop_quantity"
                    android:gravity="center_horizontal"
                    android:textSize="20sp"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/quantity"
                    android:maxLength="9"/>

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/tv_dop_result"
                android:gravity="center"
                android:textSize="20sp"
                android:background="@drawable/rectangle_light"
                android:layout_weight="5"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/Button_unit"
                android:id="@+id/button_dop_unit"
                android:background="@drawable/rectangle_light"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:textSize="16sp"
                android:textScaleX="0.8"
                android:layout_marginTop="10dp"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:id="@+id/tv_dop_economy"
            android:textSize="16sp"
            android:layout_margin="2dp"
            android:gravity="center_horizontal" />

    </LinearLayout>


    </android.support.v7.widget.CardView>



