<?xml version="1.0" encoding="utf-8"?>
<ru.forge.twice_a_day.quickcomparison.MyScroll xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/doprow"
    android:weightSum="100"
    android:gravity="center_vertical"
    android:background="@color/background_tv">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:background="@android:drawable/ic_delete"
        android:contentDescription="@string/delete"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/delete"
        android:id="@+id/textView" android:background="#c8ff0000" android:layout_gravity="center"
        android:visibility="invisible"
        android:gravity="center"/>
    <EditText
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:inputType="numberDecimal"
        android:ems="8"
        android:id="@+id/et_dop_price"
        android:gravity="center"
        android:textSize="16sp"
        android:background="@drawable/rounded"
        android:layout_weight="24"
        android:enabled="true"
        android:focusable="true"
        android:layout_margin="2dp"
        >
        <requestFocus/>
    </EditText>

    <EditText
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:inputType="numberDecimal"
        android:ems="8"
        android:id="@+id/et_dop_quantity"
        android:gravity="center"
        android:textSize="16sp"
        android:background="@drawable/rounded"
        android:layout_weight="19"
        android:enabled="true"
        android:focusable="true"
        android:layout_margin="2dp" />

    <Button
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="@string/Button_unit"
        android:id="@+id/button_dop_unit"
        android:layout_weight="12"
        android:background="@color/background_unit"
        android:layout_margin="2dp"
        android:enabled="true"
        android:focusable="true" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:id="@+id/tv_dop_result"
        android:gravity="center"
        android:textSize="16sp"
        android:background="@drawable/rectangle_light"
        android:layout_weight="17"
        android:layout_margin="2dp"
        android:textColor="@color/black" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:id="@+id/tv_dop_economy"
        android:background="@drawable/rectangle_light"
        android:layout_weight="22"
        android:textSize="16sp"
        android:layout_margin="2dp"
        android:textColor="@color/black" />

    <Button
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:id="@+id/button_dop_delete"
        android:background="@mipmap/delete_1"
        android:layout_weight="5" />
</LinearLayout>
</ru.forge.twice_a_day.quickcomparison.MyScroll>