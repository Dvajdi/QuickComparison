<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/doprow"
    android:weightSum="100"
    android:gravity="center_vertical"
    android:background="@color/background_tv"
    android:clickable="true">


    <android.support.design.widget.TextInputLayout
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="24"
        android:background="@drawable/rounded"
        android:enabled="true"
        android:focusable="true"
        android:layout_margin="2dp"
        >
        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_dop_price"
            android:gravity="center"
            android:textSize="16sp"
            android:inputType="numberDecimal"
            android:ems="8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/Price"/>

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="24"
        android:background="@drawable/rounded"
        android:enabled="true"
        android:focusable="true"
        android:layout_margin="2dp"
        >
        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_dop_quantity"
            android:gravity="center"
            android:textSize="16sp"
            android:inputType="numberDecimal"
            android:ems="8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/quantity"/>

    </android.support.design.widget.TextInputLayout>


    <Button
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="@string/Button_unit"
        android:id="@+id/button_dop_unit"
        android:layout_weight="12"
        android:background="@color/background_unit"
        android:layout_margin="2dp"
        android:enabled="true"
        android:focusable="true" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:id="@+id/tv_dop_result"
        android:gravity="center"
        android:textSize="16sp"
        android:background="@drawable/rectangle_light"
        android:layout_weight="20"
        android:layout_margin="2dp"
        android:textColor="@color/black" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:id="@+id/tv_dop_economy"
        android:background="@drawable/rectangle_light"
        android:layout_weight="20"
        android:textSize="16sp"
        android:layout_margin="2dp"
        android:textColor="@color/black" />

</LinearLayout>